<h1>Listing colleges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Established</th>
      <th>Type</th>
      <th>Location</th>
      <th>Campus</th>
      <th>Noofstudent</th>
      <th>Website</th>
      <th>Coursesoffered</th>
      <th>Scholarshipcourses</th>
      <th>Description</th>
      <th>Studentaccomodation</th>
      <th>Faculty</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.established %></td>
        <td><%= college.type %></td>
        <td><%= college.location %></td>
        <td><%= college.campus %></td>
        <td><%= college.noofstudent %></td>
        <td><%= college.website %></td>
        <td><%= college.coursesoffered %></td>
        <td><%= college.scholarshipcourses %></td>
        <td><%= college.description %></td>
        <td><%= college.studentaccomodation %></td>
        <td><%= college.faculty %></td>
        <td><%= link_to 'Show', college %></td>
        <td><%= link_to 'Edit', edit_college_path(college) %></td>
        <td><%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

